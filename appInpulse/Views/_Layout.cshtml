    <noscript>
        <div class="well text-center">
            Você está utilizando um navegador que não suporta a execução de scripts.
        </div>
    </noscript>

    <div ng-include="'views/header.html'"></div>

    <toaster-container toaster-options="{'position-class': 'toast-top-full-width', 'time-out': 5000, mouseoverTimer: false, limit: 1}"></toaster-container>
    <toaster-container toaster-options="{'toaster-id': 'notificacoes', 'position-class': 'toast-bottom-right', 'time-out': 0, mouseoverTimer: false}"></toaster-container>

    <!--<div class="wt-spinner" wt-full-page-spinner>
            <span class="glyphicon glyphicon-refresh wt-spinner-animate"></span>
        </div> -->

    <div id="ui-view" class="container" ui-view autoscroll wt-auto-focus data-tmpl-url="@Request.RequestContext.RouteData.DataTokens["templateUrl"]">
        @RenderBody()
    </div>

    <footer ng-if="!layout">
        <hr />
        <p>©luarApp - {{$root.currentUser.userEmpresa}}</p>
    </footer>

    @Scripts.Render("~/js/angular")
    @Scripts.Render("~/js/app")
</body>
    </html>
